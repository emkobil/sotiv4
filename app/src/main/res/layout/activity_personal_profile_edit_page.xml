            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:background="@null"
            android:hint="Şehir"
            android:inputType="text" />
    </RelativeLayout>
</LinearLayout>
